<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main Application Theme -->
    <style name="Theme.SudokuSolver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_sudoku_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.SudokuSolver</item>
    </style>
</resources>
